<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/anim_robot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="true"
        android:background="@color/robot_background"
        android:text="@string/robot"
        android:textColor="@color/robot_foreground"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/anim_kitten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="true"
        android:text="@string/robot"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/anim_heart_above"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/heart"
        android:textColor="@color/heart"
        android:textSize="20dp"
        android:typeface="monospace"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/anim_wintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/anim_kitten"
        android:layout_centerHorizontal="true"
        android:text="@string/win"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/anim_wintext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/anim_wintext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/win2"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/anim_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/heart"
        android:textColor="@color/heart"
        android:textSize="20dp"
        android:typeface="monospace"
        android:visibility="invisible" />

</RelativeLayout>