<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Default theme for window that looks like a toast. -->
    <style name="NKIDescription" parent="android:Theme.Dialog">
        <item name="android:background">@color/ether_background</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Toast</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">@dimen/fontSize</item>
        <item name="android:padding">@dimen/screenPadding</item>
    </style>

    <style name="EtherItem" parent="android:Widget.TextView">
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">@dimen/fontSize</item>
    </style>

    <style name="EtherItem.NKI">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="EtherItem.Kitten"></style>

    <style name="EtherItem.Robot">
        <item name="android:background">@color/robot_background</item>
        <item name="android:textColor">@color/robot_foreground</item>
    </style>

    <style name="GameText" parent="android:Widget.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:textSize">@dimen/fontSize</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Intro" parent="GameText"></style>

    <style name="Intro.Title">
        <item name="android:layout_marginTop">@dimen/screenPadding</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Intro.Subtitle"></style>

    <style name="Intro.Instructions">
        <item name="android:layout_marginTop">20sp</item>
        <item name="android:layout_marginLeft">@dimen/screenPadding</item>
        <item name="android:layout_marginRight">@dimen/screenPadding</item>
    </style>

    <style name="Intro.Instructions.UI">
        <item name="android:layout_marginTop">@dimen/screenPadding</item>
    </style>

    <style name="Intro.AboutButton" parent="android:Widget.Button">
        <item name="android:layout_marginBottom">@dimen/screenPadding</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">@dimen/fontSize</item>
    </style>

    <style name="Endgame" parent="GameText"></style>

    <style name="Endgame.Wintext" parent="GameText">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/screenPadding</item>
        <item name="android:layout_marginRight">@dimen/screenPadding</item>
    </style>

    <style name="Endgame.Heart" parent="GameText">
        <item name="android:textColor">@color/heart</item>
    </style>

</resources>